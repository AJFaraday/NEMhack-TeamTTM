\version "2.14.2"

#(set! paper-alist (cons '("two line" . (cons (* 10 in) (* 6 in))) paper-alist))

\paper {#(set-paper-size "two line")}

rhMusic = {
  <%= @right_hand %>
}

lhMusic = {
  <%= @left_hand %>
}

rhChars = \lyricmode {
  <%= @right_lyrics %>
}

lhChars = \lyricmode {
  <%= @left_lyrics %>
}

rhHidden = {
  \hideNotes <%= @hidden_notes %> \unHideNotes
}

hiddenLyrics = \lyricmode {
  <%= @character_lyrics %>
}

\score {
  \new PianoStaff <<
  
    \new Staff = "RH"  <<
      \key c \major
      \clef "treble"

      \new Voice = "rhHiddenVoice" <<
        \rhHidden
      >>

      \new Voice = "rhVoice" <<
        \rhMusic 
      >>



    >>
    \new Lyrics \lyricsto "rhVoice" {
      \rhChars
    }

    \new Lyrics \lyricsto "rhHiddenVoice" {
      \hiddenLyrics
    }

    \new Staff = "LH" <<
      \key c \major
      \clef "bass"
      \new Voice = "lhVoice" <<
        \lhMusic
      >>
    >>
    \new Lyrics \with { alignAboveContext = "LH" } {
      \lyricsto "lhVoice" {
        \lhChars
      }
    } 
  >>
}
